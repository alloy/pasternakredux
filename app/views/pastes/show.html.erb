<% content_for :stylesheet do %>
  <%= stylesheet_link_tag "themes/#{@theme}" %>
<% end %>

<% @title = "##{@paste.id} by paste.username" %>

<h1>Paste by @paste.username</h1>

<%= link_to 'All pastes', pastes_url %>

<div>
  <%= link_to 'Raw code', formatted_paste_url(@paste, 'text') %>
  
  <form action="/pastes/<%= @paste.id %>" method="get">
    <div><%= label_tag 'theme', 'Theme:' %></div>
    <%= select_tag 'theme', themes_options, :onchange => "this.form.submit();" %>
  </form>
  
  <p><%= @paste.syntax_highlight %></p>
</div>